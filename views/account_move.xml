<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!-- Inherit Form View to Modify it -->
       <record id="account_move_form_view_inherit" model="ir.ui.view">
           <field name="name">account.move.form.view.inherit</field>
           <field name="model">account.move</field>
           <field name="inherit_id" ref="account.view_move_form"/>
           <field name="arch" type="xml">
               <xpath expr="//header/button[@name='button_draft']" position="after">
                   <button name="button_draft" string="Reset to Draft" type="object" groups="rest_to_draft_acces_right.show_rest_to_draft_button_journal_entry" attrs="{'invisible' : ['|', ('show_reset_to_draft_button', '=', False), ('move_type', '!=', 'entry')]}" data-hotkey="q"/>
               </xpath>
               <xpath expr="//header/button[@name='button_draft']" position="attributes">
                   <attribute name="groups">rest_to_draft_acces_right.show_rest_to_draft_button_invoice</attribute>
                   <attribute name="attrs">{'invisible' : ['|', ('show_reset_to_draft_button', '=', False), ('move_type', '=', 'entry')]}</attribute>
               </xpath>
           </field>
       </record>
       <record id="view_account_payment_form_inherited_custom1" model="ir.ui.view">
        <field name="name">account.payment.form.inherited</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_draft']" position="attributes">
                <attribute name="groups">rest_to_draft_acces_right.show_rest_to_draft_button_payment</attribute>
                <attribute name="invisible">0</attribute> 
            </xpath>
        </field>
    </record>
    </data>
</odoo>
